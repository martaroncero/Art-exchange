<h1>Create new listing for painting<h2>
<%= simple_form_for @painting do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :category, collection: Painting::CATEGORIES %>
  <%= f.input :location %>
  <%= f.input :height %>
  <%= f.input :width %>
  <%= f.input :price_cents_per_day %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
