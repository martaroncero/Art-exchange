<div class="container my-5">
  <% if @query %>
  <h1 class="mb-3">All available paintings for <%= @query %></h1>
  <% else %>
  <h1 class="mb-3">All available paintings</h1>
    <% end %>
  <%= form_tag paintings_path, method: :get, class:"form-inline" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a work of art"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

<!--   <h3>Paintings near you</h3> -->
  <% if @paintings.empty? %>
<div> No painting to display </div>
  <% else %>
  <%= render 'shared/painting_cards', paintings: @paintings %>
<% end %>
  <!-- Map with markers -->
  <div class="my-5">
    <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
