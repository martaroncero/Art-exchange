<div class="container mt-4">
  <h2>Rent your dream painting</h2>

  <div class="home-carousel-wrap mt-4">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active w-100">
          <img class="d-block" src="https://cdn.britannica.com/78/43678-050-F4DC8D93/Starry-Night-canvas-Vincent-van-Gogh-New-1889.jpg" alt="Vincent van goth">
          <div class="carousel-caption d-none d-md-block">
            <h5>Vincent van goth</h5>
            <p>The Starry Night - Oil painting landscape - 1889</p>
          </div>
        </div>
        <div class="carousel-item w-100">
          <img class="d-block" src="https://images-na.ssl-images-amazon.com/images/I/71KaNz7a4JL._AC_SL1024_.jpg" alt="Second slide">
          <div class="carousel-caption d-none d-md-block">
            <h5>Bob Ross</h5>
            <p>Mountain Retreat oil painting</p>
          </div>
        </div>
        <div class="carousel-item w-100">
          <img class="d-block" src="https://cdm0lfbn.cloudimg.io/v7/_origin_/image_uploader/photos/9e/original/pablo-picasso.jpg?p=large" alt="Third slide">
          <div class="carousel-caption d-none d-md-block">
            <h5>Pablo Picasso</h5>
            <p>Made in the 1900's</p>
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <div class="card-container">
    <h3>Paintings near you</h3>
    <div class="row">
      <% @random_paintings.each do |painting| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="<%# cl_image_path(painting.photo.key) %>" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= painting.title %></h5>
              <p class="card-text"><%= "#{painting.category} painting. (#{painting.width}x#{painting.height}cm)" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>